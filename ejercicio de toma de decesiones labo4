#include <iostream>
using namespace std;

int main() {
    int edad;
    float precio;

    cout << "=== CINE - PRECIO DEL BOLETO ===" << endl;
    cout << "Ingrese su edad: ";
    cin >> edad;

    // Condiciones con if - else
    if (edad < 5) {
        precio = 0;
        cout << "Entrada gratuita para menores de 5 años." << endl;
    }
    else if (edad >= 5 && edad <= 12) {
        precio = 3.50;
        cout << "Entrada para niños: $" << precio << endl;
    }
    else if (edad >= 13 && edad <= 17) {
        precio = 5.00;
        cout << "Entrada para adolescentes: $" << precio << endl;
    }
    else if (edad >= 18 && edad <= 59) {
        precio = 7.00;
        cout << "Entrada para adultos: $" << precio << endl;
    }
    else {
        precio = 4.00;
        cout << "Entrada para adultos mayores (60+): $" << precio << endl;
    }

    cout << "Gracias por su compra!" << endl;

    return 0;
}
